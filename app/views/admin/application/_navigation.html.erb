<%#
# Navigation

This partial is used to display the navigation in Administrate.
By default, the navigation contains navigation links
for all resources in the admin dashboard,
as defined by the routes in the `admin/` namespace
%>

<nav class="navigation" role="navigation">
  <%= link_to(t("administrate.navigation.back_to_app"), root_url, class: "button button--alt button--nav") if defined?(root_url) %>
  <% if @current_user.admin? %>
    <%= link_to "Schools", admin_schools_path, class: "navigation__link navigation__link--#{current_page?('admin/schools') ? 'active': ''}"%>
    <%= link_to "School Admins", admin_school_admins_path, class: "navigation__link navigation__link--#{current_page?('admin/schools_admins') ? 'active': ''}"%>
    <%= link_to "Courses", admin_courses_path, class: "navigation__link navigation__link--#{current_page?('admin/courses') ? 'active': ''}"%>
    <%= link_to "Batches", admin_batches_path, class: "navigation__link navigation__link--#{current_page?('admin/batches') ? 'active': ''}"%>
    <%= link_to "Students", admin_students_path, class: "navigation__link navigation__link--#{current_page?('admin/students') ? 'active': ''}"%>
    <%= link_to "Enrollments", admin_enrollments_path, class: "navigation__link navigation__link--#{current_page?('admin/enrollments') ? 'active': ''}"%>
  <% elsif @current_user.school_admin? %>
    <%= link_to "Schools", admin_schools_path, class: "navigation__link navigation__link--#{current_page?('admin/schools') ? 'active': ''}"%>
    <%= link_to "Courses", admin_courses_path, class: "navigation__link navigation__link--#{current_page?('admin/courses') ? 'active': ''}"%>
    <%= link_to "Batches", admin_batches_path, class: "navigation__link navigation__link--#{current_page?('admin/batches') ? 'active': ''}"%>
    <%= link_to "Students", admin_students_path, class: "navigation__link navigation__link--#{current_page?('admin/students') ? 'active': ''}"%>
    <%= link_to "Enrollments", admin_enrollments_path, class: "navigation__link navigation__link--#{current_page?('admin/enrollments') ? 'active': ''}"%>
  <% elsif @current_user.student? %>
    <%= link_to "Courses", admin_courses_path, class: "navigation__link navigation__link--#{current_page?('admin/courses') ? 'active': ''}"%>
    <%= link_to "Batches", admin_batches_path, class: "navigation__link navigation__link--#{current_page?('admin/batches') ? 'active': ''}"%>
    <%= link_to "Enrollments", admin_enrollments_path, class: "navigation__link navigation__link--#{current_page?('admin/enrollments') ? 'active': ''}"%>
  <% end %>
</nav>
